<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="windowActionBarOverlay">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <!--<item name="android:windowActionBarOverlay">true</item>-->

  </style>


<!--toolbar style-->
  <style name="ToolbarTheme">
    <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
    <item name="android:elevation">4dp</item>
  </style>

  <style name="ToolbarTheme_Title">
    <item name="android:textSize">14dp</item>
    <item name="android:textColor">@color/black</item>
  </style>

  <!--navigation bar style-->
  <style name="BottomNavTheme">

<item name="itemIconTint">@color/navigation_item</item>
    <item name="itemTextColor">@color/navigation_item</item>
  </style>

  <!--button stlye - run, resume, stop, return-->
  <style name="RunButtonDarkTheme" parent="Widget.AppCompat.Button">
    <item name="android:background">@drawable/btn_run_dark_bg</item>
    <item name="android:elevation">24dp</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/real_white</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_margin">16dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:layout_centerHorizontal">true</item>
  </style>

  <style name="RunButtonLightTheme" parent="Widget.AppCompat.Button">
    <item name="android:background">@drawable/btn_run_light_bg</item>
    <item name="android:elevation">24dp</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/dark_grey</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_margin">16dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:layout_centerHorizontal">true</item>
  </style>


  <!--splash-->
  <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
    <item name="android:windowBackground">@drawable/activity_splash_screen_logo</item>
  </style>

  <style name="PagerTabStrip"> <item name="android:textColor">@color/pager_tab_strip_text_selector</item></style>

</resources>
