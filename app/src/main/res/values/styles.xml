<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="windowActionBarOverlay">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <!--<item name="android:windowActionBarOverlay">true</item>-->

  </style>


<!--toolbar style-->
  <style name="ToolbarTheme">
    <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
    <item name="android:background">@color/lightgrey</item>
    <item name="android:elevation">8dp</item>
  </style>

  <style name="ToolbarTheme_Title">
    <item name="android:textSize">16dp</item>
    <item name="android:textColor">@color/darkergrey</item>
  </style>

  <!--navigation bar style-->
  <style name="BottomNavigationTheme">
    <item name="android:background">@color/lightgrey</item>
    <item name="android:itemBackground">@drawable/navigationbar_item_bg</item>
    <item name="itemIconTint">@color/navigation_item</item>
    <item name="itemTextColor">@color/navigation_item</item>
    <item name="android:textSize">9dp</item>
    <item name="android:listPreferredItemHeightSmall">40dp</item>
    <item name="listPreferredItemHeightSmall">40dp</item>
    <item name="paddingStart">@dimen/bottom_navigation_padding</item>
    <item name="paddingEnd">@dimen/bottom_navigation_padding</item>
  </style>

  <!--button stlye - run, resume, stop, return-->
  <style name="RunButtonDarkTheme" parent="Widget.AppCompat.Button">
    <item name="android:background">@drawable/btn_run_dark_bg</item>
    <item name="android:elevation">20dp</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/lightgrey</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_margin">16dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:layout_centerHorizontal">true</item>
  </style>

  <style name="RunButtonLightTheme" parent="Widget.AppCompat.Button">
    <item name="android:background">@drawable/btn_run_light_bg</item>
    <item name="android:elevation">20dp</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/darkergrey</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_margin">16dp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:layout_centerHorizontal">true</item>
  </style>

</resources>
